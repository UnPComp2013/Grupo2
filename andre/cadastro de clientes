#include<stdio.h>
#include<stdlib.h>


#define MAX 100

struct cliente
{
   char nome[30];
   char telefone[15];
   char rua[40];
   char cidade[10];
   char estado[3];
   unsigned long int cep;
}

cliente_info[MAX];

   void init_list(void);
   void enter(void);
   void deletea(void);
   void list(void);
   int menu_select(void);
   int busca_livre(void);

int main( void ) //Main DEVE retornar um int
{
int opcao;

	init_list();/*inicializa a matriz de estruturas*/

	for(;;)
{
	   opcao = menu_select();
	   switch(opcao)
	   
	  {
	  case 1: enter();
		  break;
		  case 2: deletea();
		  break;
		  case 3: list();
		  break;
		  case 4: exit(0);
	  }
	  	 
   return 0;
}
		  
/* Inicializa a lista */
void init_list(void)
{
   register int t;

   for(t=0;t<MAX; ++t) cliente_info[t].nome[0] = 0;
}
int menu_select(void) // você retorna uma variavel int, portanto a função tem que retornar um int
{

   int c;

   printf("1. Inserir um cliente\n");
   printf("2. Excluir um cliente\n");
    printf("3. Listar clientes\n");
   printf("4. Sair\n");

   do
   {
   
    printf("\nDigite sua escolha: ");

	  scanf("%d", &c);
   } while(c<0 || c>4);
   return c;
}
   
/* Insere  os clientes na lista */
void enter(void)
{
   int slot;
   char s[80];
 
 slot = busca_livre();
   if (slot == -1)
{
	  printf("Lista cheia!");
	  return;
   }
